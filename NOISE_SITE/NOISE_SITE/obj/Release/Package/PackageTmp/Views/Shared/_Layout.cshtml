            position: relative;
            height: 100%;
            transition: 0.5s;
        }

        .item-image {
            position: relative;
            height: 130px;
            padding: 5px;
            margin-top: 5px;
            margin-bottom: 15px;
            border: 1px dotted;
            transition: 0.5s;
        }

        .bg-color {
            width: 100%;
            height: 100%;
            background-color: #d2d2d278;
            transition: 0.5s;
            position: absolute;
            z-index: 5;
            top: 0;
            left: 0;
            opacity: 0;
        }

        .container-btn {
            position: absolute;
            z-index: 10;
            top: 44%;
            width: 100%;
            text-align: center;
            opacity: 0;
            transition: 0.5s;
            left: 0px;
        }

            .container-btn .btn-primary, .container-btn .btn-danger {
                padding: 11px;
                font-size: 17px;
            }

            .container-btn .btn-primary {
                margin-right: 1px;
                padding: 11px 10px !important;
            }

        .item-image:hover .bg-color, .item-image:hover .container-btn {
            opacity: 1;
        }

        .item-image:hover {
            border: 1px solid black;
            border-radius: 2px;
            transform: scale3d(1.03,1.05,1.05) translate3d(1px,-5px,1px);
        }

        .progress-bar {
            background-color: #d5cdcd;
            padding: 5px 3px;
        }
    </style>
